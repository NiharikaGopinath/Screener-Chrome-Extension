{
    "manifest_version": 3,
    "name": "Screen Recorder",
    "version": "1.0",
    "description": "A simple screen recording extension.",
    "permissions": ["desktopCapture"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  